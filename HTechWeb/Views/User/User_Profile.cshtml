                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (listOrder.totalCount > 0)
                                                        {
                                                            int index = 1;
                                                            foreach (var item in listOrder.data)
                                                            {
                                                                <tr>
                                                                    <td>@(index++)</td>
