                                                    <input class="form-control" name="shopAddress" type="text" placeholder="Shop Address" required>
                                                </div>
                                                <div class="col-md-12">
                                                    <input type="submit" value="Register" class="btn" />
                                                </div>
                                            </div>
                                        </form>
                                    }
