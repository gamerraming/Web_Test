                                    ajsdhaskljdhasjkhdajsl khd
                                    ajsdhaskljdhasjkhdajsl khd
                                    ajsdhaskljdhasjkhdajsl khd
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Box Shop Information End-->
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">
                                <div class="col-md-8">
                                    <span><strong>Search product in shop</strong></span>
                                    <div class="product-search">
                                        <form action="/Shop/SearchInShop/@Model.shopId" id="formSearchInShop" method="post" hidden></form>
                                        <input type="text" form="formSearchInShop" name="shopProductKeyWord" placeholder="Search">
                                        <button form="formSearchInShop"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <span><strong>Sort</strong></span>
                                    <div class="product-short">
                                        <div class="dropdown">
                                            <div class="dropdown-toggle" id="proSort" data-toggle="dropdown">Product short by</div>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="@Url.Action("SearchSortBy","Shop",new {id=Model.shopId,sort ="productName"})" class="dropdown-item">A-->Z</a>
                                                <a href="@Url.Action("SearchSortBy","Shop",new {sort ="MostSale"})" class="dropdown-item">Most sale</a>
                                            </div>
                                            <script>
                                                $('#proSort').click(function () {

                                                });
                                            </script>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @{
                        if (Model.products.Count > 0)
                        {
                            int index = 1;
                            foreach (var item in Model.products)
                            {
                                <div class="col-md-4">
                                    <div class="product-item">
                                        <div class="product-title">
                                            <a href="#">@item.productName</a>
                                            <div class="ratting">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                        </div>
                                        <div class="product-image">
                                            <a href="product-detail.html">
                                                <img src="~/Others/images/product-@(index++).jpg" alt="Product Image">
                                            </a>
                                            <div class="product-action">
                                                <a href="@Url.Action("AddToCart", "Home", new { id = item.productId, qty = 1 })"><i class="fa fa-cart-plus"></i></a>
                                                <a href="@Url.Action("Product_Details", "Shop", new { id = item.productId })"><i class="fa fa-search"></i></a>
                                            </div>
                                        </div>
                                        <div class="product-price">
                                            <h3><span>$</span>@item.price.ToString("#,###", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</h3>
                                            <a class="btn" href="@Url.Action("BuyNow", "Home", new { id = item.productId })"><i class="fa fa-shopping-cart"></i>Buy Now</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>

                <!-- Pagination Start -->
                <div class="col-md-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- Pagination Start -->
            </div>


        </div>
    </div>
</div>
