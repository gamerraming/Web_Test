@model HTechWeb.Models.DTO.Shop.Response.ShopGetResponse.Result
@{
    ViewBag.Title = "Shop Page";
    Layout = "~/Views/_Layout/_layout.cshtml";
}
<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active">Shop</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Product List Start -->
<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <!--Box Shop Information Start-->
                    <div class="col-md-12">
                        <div class="product-view-top" style="border: 2px solid rgb(248, 107, 97);border-radius:10px;">
                            <div class="row text-center">
                                <div class="col-md-5">
                                    <div class="mb-3" style="height: 100px;">
                                        <img src="~/Others/images/client.jpg" alt="Image" class="shadow" style="height: 100%; border-radius: 30px;">
                                    </div>
                                    <h4>@Model.shopName</h4>
                                    <div>
                                        <div>
                                            <i class="fa fa-id-card-o" aria-hidden="true"></i>&nbsp;
                                            <strong>@Model.shopEmail</strong>
                                        </div>
                                        <div>
                                            <i class="fa fa-phone" aria-hidden="true"></i>&nbsp;
                                            <strong>@Model.shopPhone</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
